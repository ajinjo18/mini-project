                    location.href = '/home/thankyou'
                }
                else if(data.message=='out of stock'){
                    outofstock.innerHTML='out of stock'
                }
                else if (data.type == 'danger') {
                    errorhappend()
                }
                else {
                    location.href = '/home/checkout'
                }
            })
            .catch(error => {
                console.error('There was an error:', error);
            });
        }
        else {
            errorhappend()
        }
