<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shorcket icon" type="x-icon" href="/img/logo2.png">
    <title>GO shop</title>    <link rel="stylesheet" href="/css/otp.css" />
    <!-- Boxicons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
   <script src="script.js" defer></script>
   <style>
    #hiddenButton {
        display: none;
    }
    </style>
  </head>
  <body style="background: #4070f4;">
    <div class="container1">
      <div class="flex-container">
        <a href="/user/login"><button type="button" class="justify-content-end btn-close" aria-label="Close"></button></a>
      </div>
      <header>
        <i class="bx bxs-check-shield"></i>
      </header>
      <h3>Enter OTP Code</h3>
      <% if(invalidforgetotp) { %>
        <div id="alert" class="alert alert-dismissible fade show alert-<%= invalidforgetotp.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
            <strong><%= invalidforgetotp.message %></strong>
        </div>
      <% } %> 
      <h6>please enter the OTP send to,</h6>
      <h6 style="margin-top: -10px;"><i><%= user %></i></h6>

      <form action="/user/updatepassword" method="post">
        <input name="otp" class="input1" type="number">
        <button type="submit" class="button1">Verify OTP</button>
        <div id="countdown">00:30</div>
        <div id="hiddenButton"> <!-- Initially hidden -->
            <a id="showButton" href="/user/otpgenerator">Resend OTP</a>
            <!-- <button id="showButton">Show Me!</button> -->
        </div>
      </form>
    </div>
    <script>
      setTimeout(function() {
        var alertDiv = document.getElementById('alert');
        if (alertDiv) {
          alertDiv.remove();
        }
      }, 5000);
    </script>

    <script>
        let seconds = 30;

        function countdown() {
            const countdownDisplay = document.getElementById('countdown');
            const interval = setInterval(function () {
                countdownDisplay.textContent = seconds;

                if (seconds === 0) {
                    clearInterval(interval);
                } else {
                    seconds--;
                }
            }, 1000);
        }

        countdown(); // Start the countdown when the page loads
    </script>

    <script>
        // Function to show the hidden button after 1 minute
        function showButtonAfterOneMinute() {
            const hiddenButton = document.getElementById('hiddenButton');
            hiddenButton.style.display = 'block'; // Show the hidden button
        }

        // Set a timeout to call the function after 1 minute (60,000 milliseconds)
        setTimeout(showButtonAfterOneMinute, 30000);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>