<div style="padding: 20px;" class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Return Product Request</h6>
            <div class="table-responsive">
                <table style="text-align: center;" class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Payment</th>
                            <th scope="col">Price</th>
                            <th scope="col">Order Id</th>
                            <th scope="col">User</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% returnproduct.forEach((row,index)=>{ %>
                            <% if (row.status !='Return approved' && row.status !='Return rejected') { %>
                                <tr>
                                    <th scope="row"><%=index+1 %></th>
                                    <td><%=row.productname %></td>
                                    <td><%=row.payment %></td>
                                    <td><%=row.amount %></td>
                                    <td><%=row.orderid %></td>
                                    <td><%=row.user %></td>
                                    <td><div>
                                        <a href="/admin/approverefund/<%= row._id %>"><button class="approve-button"><i class="fas fa-approve"></i> Approve</button></a>
                                        <a href="/admin/rejectreturn/<%= row._id %>"><button class="reject-button"><i class="fas fa-reject"></i> Reject</button></a>
                                    </div></td>
                                </tr>                             
                            <% } %>
                    </tbody>
                    <% }) %>
                </table>
            </div>
        </div>
    </div>

