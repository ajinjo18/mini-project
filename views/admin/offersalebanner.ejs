<div style="padding: 20px;" class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Offer Sale</h6>

            <div class="card">
                <div class="card-body">
                  <!-- <h5 class="card-title">Special title treatment</h5> -->
                  <p class="card-text">sale : <%= offerbaner[0].sale %></p>
                  <p class="card-text">Discount : <%= offerbaner[0].discount %></p>
                  <p class="card-text">Offer Period,  <br>Day-<%= offerbaner[0].day %><br>Hours-<%= offerbaner[0].hour %><br>Min-<%= offerbaner[0].min %><br>Sec - <%= offerbaner[0].sec %></p>

                  <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
                  <button style="margin-left: 20px;" 
                  type="button" 
                  class="btn btn-success"
                  data-bs-toggle="modal" 
                  data-bs-target="#exampleModal">
                  <i class="fas fa-edit fa-lg mx-1"></i>
                  </button>
                </div>
              </div>

           <!-- Modal -->
           <div class="modal fade" id="exampleModal" tabindex="-1"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Offer Sale Banner</h5>
                        
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                        </div>
                        <form action="/admin/offersale/<%= offerbaner[0]._id %>" method="post">
                            <div class="form-row">
                                <div style="padding: 20px;" class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Sale</label>
                                    <div class="col-sm-10">
                                      <input name="sale" value="<%= offerbaner[0].sale %>" type="text" class="form-control" id="colFormLabel" required>
                                    </div>
                                  </div>
                            </div>
                            <div class="form-row">
                                <div style="padding: 20px;" class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Discount</label>
                                    <div class="col-sm-10">
                                      <input name="discount" value="<%= offerbaner[0].discount %>" type="text" class="form-control" id="colFormLabel" required>
                                    </div>
                                  </div>
                            </div>
                            <div style="text-align: center;">
                                <label for="">Time period </label>
                            </div>
                            <div class="form-row">
                                <div style="padding: 20px;" class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Day</label>
                                    <div class="col-sm-10">
                                      <input name="day" value="<%= offerbaner[0].day %>" type="text" class="form-control" id="colFormLabel" required>
                                    </div>
                                  </div>
                            </div>
                            <div class="form-row">
                                <div style="padding: 20px;" class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Hour</label>
                                    <div class="col-sm-10">
                                      <input name="hour" value="<%= offerbaner[0].hour %>" type="text" class="form-control" id="colFormLabel" required>
                                    </div>
                                  </div>
                            </div>
                            <div class="form-row">
                                <div style="padding: 20px;" class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Min</label>
                                    <div class="col-sm-10">
                                      <input name="min" value="<%= offerbaner[0].min %>" type="text" class="form-control" id="colFormLabel" required>
                                    </div>
                                  </div>
                            </div>
                            <div class="form-row">
                                <div style="padding: 20px;" class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Sec</label>
                                    <div class="col-sm-10">
                                      <input name="sec" value="<%= offerbaner[0].sec %>" type="text" class="form-control" id="colFormLabel" required>
                                    </div>
                                  </div>
                            </div>
                            <!-- <button type="button" class="btn btn-secondary"
                                data-bs-dismiss="modal">Close</button> -->
                                <div style="text-align: center; margin-bottom: 20px;">
                                    <button id="button" type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                        </form>
                        </div>
                </div>
            </div>
        </div>
        </div>
