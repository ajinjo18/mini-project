  <div class="col-12" style="padding: 20px;">
    <div class="bg-light rounded h-100 p-4">
      <h6 class="mb-4">All Users</h6>
      <div class="table-responsive">
        <table style="text-align: center;" class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((row,index)=>{ %>
              <tr>
                <!-- <th scope="row">1</th> -->
                <td>
                  <%=index+1 %>
                </td>
                <td>
                  <%=row.name %>
                </td>
                <td>
                  <%=row.email %>
                </td>
                <td style="text-align: center;">
                  <% if (row.blocked=='false' ) { %>
                    <a onclick="checker()" href="/admin/block/<%= row._id %>"><button
                        style="border-radius: 20px; background-color: red; color: white;" type="button"
                        class="btn">Block</button></a>
                    <% }else{ %>
                      <a onclick="checker1()" href="/admin/unblock/<%= row._id %>"><button style="border-radius: 20px;" type="button"
                          class="btn btn-danger">Unblock</button></a>
                      <% } %>
                </td>
              </tr>
          </tbody>
          <% }) %>
        </table>
      </div>
    </div>
  </div>

  <script>
    function checker1() {
      const result=confirm('Are You Sure You Want to unblock?');
      if(result==false){
        event.preventDefault();
      }
    }

    function checker() {
      const result=confirm('Are You Sure You Want to block?');
      if(result==false){
        event.preventDefault();
      }
    }
  </script>

