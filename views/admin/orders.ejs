        <script>
            document.addEventListener('DOMContentLoaded', () => {
                // Assuming you have the total number of elements you want to handle
                const totalElements = <%= index - 1 %>;  // Adjust this to your actual total
        
                for (let i = 1; i <= totalElements; i++) {
                    const button = document.getElementById(`button${i}`);
                    const status = document.getElementById(`Kategori${i}`);
                    const orderid = document.getElementById(`orderid${i}`).textContent;
        
                    const url = 'https://ajinjo.shop/admin/orderstatus';
        
                    button.addEventListener('click', () => {
                        const selectedStatus = status.value;
        
                        const data = {
                            status: selectedStatus,
                            orderid: orderid
                        };
        
                        fetch(url, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        })
                        .then(response => response.json())
                        .then(responseData => {
                            window.location.href='/admin/orders'
                        })
                        .catch(error => {
                            console.error('Error sending data to the server:', error);
                        });
                    });
                }
            });
        </script>



